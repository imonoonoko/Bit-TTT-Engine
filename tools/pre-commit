#!/bin/sh
# Bit-TTT Pre-Commit Hook
# Prevents large files from being committed.

echo "[Hook] Running pre-commit checks..."
if command -v python3 > /dev/null 2>&1; then
    python3 tools/pre_commit_check.py
else
    python tools/pre_commit_check.py
fi
RESULT=$?

if [ $RESULT -ne 0 ]; then
    echo "‚ùå Pre-commit check failed. Commit aborted."
    exit 1
fi

exit 0
